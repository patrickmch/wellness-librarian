# API Keys (required)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Voyage AI (required for enhanced pipeline)
VOYAGE_API_KEY=pa-your-voyage-key

# Admin key for protected endpoints (change in production)
ADMIN_API_KEY=your-secure-admin-key

# Pipeline selection: "legacy", "enhanced", or "ab_test"
# RAG_PIPELINE=legacy
# AB_TEST_RATIO=0.5  # Ratio to route to enhanced pipeline in ab_test mode

# Optional: Voyage embedding model
# VOYAGE_EMBEDDING_MODEL=voyage-3

# Optional: Legacy pipeline overrides
# TRANSCRIPT_SOURCE_DIR=/path/to/transcripts
# CHROMA_PERSIST_DIR=/path/to/chroma_db
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=200
# DEFAULT_TOP_K=8
# CLAUDE_MODEL=claude-sonnet-4-20250514

# Optional: Enhanced pipeline overrides
# CHILD_CHUNK_TOKENS=250
# CHILD_CHUNK_OVERLAP=50
# PARENT_MIN_TOKENS=500
# PARENT_MAX_TOKENS=2000
# MAX_CHUNKS_PER_VIDEO=2
# ENABLE_RERANKING=true
# ENABLE_MMR=true
# MMR_LAMBDA=0.5
